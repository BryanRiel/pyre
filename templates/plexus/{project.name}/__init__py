# administrative
def credits():
    """
    Print the acknowledgments
    """
    # generate the message
    print(_{project.name}_acknowledgments)
    # all done
    return


def copyright():
    """
    Return the {project.name} copyright note
    """
    # generate the message
    print(_{project.name}_copyright)
    # all done
    return


def license():
    """
    Print the {project.name} license
    """
    # generate the message
    print(_{project.name}_license)
    # all done
    return


def version():
    """
    Return the {project.name} version
    """
    # generate the message
    print(_{project.name}_version)
    # all done
    return


# constants
_{project.name}_version = (1, 0, REVISION)

_{project.name}_tag = "{project.name} {{}}.{{}} revision {{}}".format(*_{project.name}_version)

_{project.name}_copyright = "{{}}: Copyright (c) {project.span} All rights reserved".format(_{project.name}_tag)

_{project.name}_header = """
    {{}}
    Copyright (c) {project.span} All Rights Reserved

authors:
    {project.authors}
    """.format(_{project.name}_tag)

_{project.name}_license = _{project.name}_header + """
license:
    The complete usage terms can be found in the file LICENSE.txt
    """

_{project.name}_acknowledgments = _{project.name}_header + """
acknowledgments:
    """


