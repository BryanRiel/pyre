# import and publish pyre symbols
from pyre import (
    # protocols, components and traits
    schemata, constraints, properties, protocol, component, foundry,
    # decorators
    export, provides,
    # the manager of the pyre runtime
    executive,
    # miscellaneous
    tracking, units
    )


# bootstrap
package = executive.registerPackage(name='{project.name}', file=__file__)
# save the geography
home, prefix, defaults = package.layout()

# plexus support
from .components import plexus, action, command

# publish local modules
from . import (
    # my extensions
    extensions
    )


# administrative
def credits():
    """
    Print the acknowledgments
    """
    yield from _{project.name}_acknowledgments.splitlines()


def copyright():
    """
    Return the {project.name} copyright note
    """
    yield from _{project.name}_copyright.splitlines()


def license():
    """
    Print the {project.name} license
    """
    yield from _{project.name}_license.splitlines()


def version():
    """
    Return the {project.name} version
    """
    yield from _{project.name}_version


def usage():
    """
    Basic usage information
    """
    # print the usage screen
    yield from _{project.name}_usage.splitlines()


# constants
_{project.name}_version = (1, 0, REVISION)

_{project.name}_tag = "{project.name} {{}}.{{}} revision {{}}".format(*_{project.name}_version)

_{project.name}_copyright = "{{}}: Copyright (c) {project.span} All rights reserved".format(_{project.name}_tag)

_{project.name}_header = """
    {{}}

    Authors:
      {project.authors}

    Copyright (c) {project.span} All Rights Reserved
    """.format(_{project.name}_tag)

_{project.name}_license = _{project.name}_header + """
    The complete usage terms can be found in the file LICENSE.txt
    """

_{project.name}_acknowledgments = _{project.name}_header + """
    """

_{project.name}_usage = _{project.name}_header + """
    Basic commands:
        {project.name} info           display package information
    """


# end of file
