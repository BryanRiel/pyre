// meta-methods
template <typename indexT, typename orderT>
pyre::geometry::Slice<indexT, orderT>::
Slice(const index_type & low, const index_type & high, const order_type & order) :
    _low { low },
    _high { high },
    _order {order}
{}


// interface
template <typename indexT, typename orderT>
const auto &
pyre::geometry::Slice<indexT, orderT>::
low() const {
    // easy
    return _low;
}


template <typename indexT, typename orderT>
const auto &
pyre::geometry::Slice<indexT, orderT>::
high() const {
    // easy
    return _high;
}


template <typename indexT, typename orderT>
const auto &
pyre::geometry::Slice<indexT, orderT>::
order() const {
    // easy
    return _order;
}


template <typename indexT, typename orderT>
auto
pyre::geometry::Slice<indexT, orderT>::
begin() const {
    // easy enough...
    return iterator_type{  *this };
}


template <typename indexT, typename orderT>
auto
pyre::geometry::Slice<indexT, orderT>::
end() const {
    // easy enough...
    return iterator_type{ _high, *this };
}


